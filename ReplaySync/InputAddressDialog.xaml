<Window x:Class="ReplaySync.InputAddressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input IP Address" Height="130" Width="333">
    <Grid>
        <Label Content="Input the IP Address of the caster to connect to." Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox x:Name="txtIPAddress" Height="23" HorizontalAlignment="Left" Margin="12,46,0,0" VerticalAlignment="Top" Width="157" />
        <Button Content="Accept" Height="23" HorizontalAlignment="Left" Margin="175,45,0,0"  VerticalAlignment="Top" Width="62" IsDefault="True" Click="AcceptClicked" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="243,46,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" />
    </Grid>
</Window>
